<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="log4j2Configuration" packages="org.apache.logging.log4j.test">
  <Properties>
    <Property name="rootLogPath">./crawler.log</Property>
    <Property name="rootLogRollingPath">./crawler_%d{yyyyMMdd}.log</Property>
    <Property name="rootLogRollingInterval">1</Property>
  </Properties>
  
  <Appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%d{HH:mm:ss.SS} %-5p %-15c{1}:%-4L - %m%n"/>
      <!-- <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> -->
    </Console>
    
    <RollingFile name="rootRollingFile"	fileName="${rootLogPath}" filePattern="${rootLogRollingPath}">
      <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SS} %-5p %-15c{1}:%-4L - %m%n"/>
      <TimeBasedTriggeringPolicy interval="${rootLogRollingInterval}" />
    </RollingFile>
  </Appenders>
  
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="rootRollingFile" />
      <AppenderRef ref="STDOUT" />
    </Root>
  </Loggers>
</Configuration>